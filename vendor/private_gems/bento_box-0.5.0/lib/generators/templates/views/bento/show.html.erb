<%% content_for :bread_crumb do %>
	<%%= bread_crumb bread_crumb_trail, @<%= singular_table_name %> %>
<%% end %>
<%%= seventy_thirty_container do |c| %>
  <%%= c.left do %>
    <%%= bento_form([:bento, @<%= singular_table_name %>], :editable => false) do |f| %>
      <%% if @<%= singular_table_name %>.errors.any? %>
        <div id="error_explanation">
          <h2><%%= pluralize(@<%= singular_table_name %>.errors.count, "error") %> prohibited this <%= singular_table_name %> from being saved:</h2>
    
          <ul>
          <%% @<%= singular_table_name %>.errors.full_messages.each do |msg| %>
            <li><%%= msg %></li>
          <%% end %>
          </ul>
        </div>
      <%% end %>
      <%%= f.group :default, {} do |g|%> 
    <% for attribute in attributes -%>
      <% if attribute.name != 'created_at' and attribute.name != 'updated_at' -%>
          <%%= g.label :<%= attribute.name %> %>
          <%%= g.<%= attribute.field_type %> :<%= attribute.name %> %><br />
      <% else %>
          <%%= g.label :<%= attribute.name %> %>
          <div><%%= @<%= singular_table_name %>.<%= attribute.name %> %></div><br />      
      <% end %>
    <% end -%>
      <%% end %>
    <%% end %>
  <%% end %>
  <%%= c.right do %>
  <%% end %>
<%% end %>