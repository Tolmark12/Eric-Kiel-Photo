<% body_only ||= nil %>
<%= grid(@bento_users, :sortable => true, :filterable => true, :paginatable => true, :page => (params[:bentouser_page] || 1), :ajax => body_only) do |g| %>
  <% g.default_action Proc.new {|user| %{  return ajaxClick('#{bento_bento_user_path(user)}');  } } %>
  <% g.add_column :username %>
  <% g.add_column :email %>
<% end %>