<% body_only ||= nil %>
<%= grid(@roles, :sortable => true, :filterable => true, :paginatable => true, :page => (params[:role_page] || 1), :ajax => body_only) do |g| %>
  <% g.default_action Proc.new {|role| %{  ajaxClick('#{edit_bento_role_path(role)}'); return false;  } } %>
  <% g.add_column :name %>
  <% g.add_column :actions, {:title => 'Actions', :content => Proc.new {|role| raw role.actions.map(&:path).join(" <br/> ")}}%>
<% end %>