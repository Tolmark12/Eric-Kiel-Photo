<div class="login">
	<a href="#link" class="logo"></a>
	<div class="sign-in">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<%= f.label :username %>
			<%= f.text_field :username %>
			<%= f.label :password %>
			<%= f.password_field :password %>
			<%= link_to "Oops! I forgot my password.", new_password_path(resource_name) %>
 			<%= f.submit "Login", :class=> 'button-thick login-btn' %>
		<% end %>
	</div>
</div>