<% content_for :bread_crumb do %>
	<%= bread_crumb bread_crumb_trail, current_bento_user %>
<% end %>
<% content_for :toolbar do %>
  <%= link_to :back do %><input type="submit" value="Cancel" class="button-thin cancel" /><% end %>
  <%= link_to bento_profile_view_path  do %><input type="submit" value="View" class="button-thin view" /><% end %>
<% end %>
<%= seventy_thirty_container do |c| %>
  <%= c.left do %>
    <%= bento_form([:bento, current_bento_user], :url => bento_profile_update_path, :html => {:method => :put} ) do |f| %>
      <% if current_bento_user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(current_bento_user.errors.count, "error") %> prohibited this bento_user from being saved:</h2>
    
          <ul>
          <% current_bento_user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.group :default, {} do |g| %>
		<div class="left-container">
        	<%= g.label :username %>
        </div>
		<%= g.text_field :username %><br />
		<div class="left-container">
        	<%= g.label :email %>
        </div>
		<%= g.text_field :email %><br />
		<div class="left-container">
        	<%= g.label :password %>
        </div>
		<%= g.password_field :password %><br />
		<div class="left-container">
        	<%= g.label :password_confirmation %>
		</div>
        <%= g.password_field :password_confirmation %><br />
		<div class="left-container">
        	<%= g.label :current_password %>
		</div>
        <%= g.password_field :current_password %><br />
      <% end %>
        <%= f.submit %>
    <% end %>
  <% end %>
  <%= c.right do %>
    <%= note do %>
      <p><i>(leave password blank if you don't want to change it)</i></p>
    <% end %>
    <br />
    <%= note do %>
      <p><i>(we need your current password to confirm your changes)</i></p>
    <% end %>
  <% end %>
<% end %>
