<% content_for :bread_crumb do %>
	<%= bread_crumb bread_crumb_trail, current_bento_user %>
<% end %>
<% content_for :toolbar do %>
  <%= link_to :back do %><input type="submit" value="Cancel" class="button-thin cancel" /><% end %>
  <%= link_to bento_profile_edit_path  do %><input type="submit" value="Edit" class="button-thin edit" /><% end %>
<% end %>
<%= seventy_thirty_container do |c| %>
  <%= c.left do %>
    <%= bento_form([:bento,current_bento_user], :url => bento_profile_update_path, :editable => false ) do |f| %>
      <%= f.group :default, {} do |g| %>
		<div class="left-container">
        	<%= g.label :username %>
		</div>
        <%= g.text_field :username %><br />
		<div class="left-container">
        	<%= g.label :email %>
		</div>
        <%= g.text_field :email %><br />
      <% end %>
    <% end %>
  <% end %>
  <%= c.right do %>
  <% end %>
<% end %>