   <% options = {:type  => params[:type],
  	 			 :tooltip => params[:tooltip],
            	 :attribute_label => params[:label],
            	 :is_label_image  => params[:is_label_image],
          		 :destination     => params[:destination], 
				 :page => (params["#{params[:attribute]}_page".to_sym] || 1),
          		 :paginatable => true, :orderable => params[:orderable], 
				 :filterable => true, :sortable => true,
				 :sorted_relation => params[:sorted_relation]} %>
   <% if params[:body_only] %>
      <%= selector_instance(@object,@attribute_relation,options.merge({:ajax => true})).body %>
   <% else %>
   	  <% content_for :bread_crumb do %>
		<% middle_crumb = begin
							url_for({:controller => params[:object].pluralize, :action => (params[:id]) ? :edit : :new, :id => params[:id]})
			 			  rescue
							false
						  end %>
   	  	<ul data-path="<%=request.path%>"> 
			<li class="<%= 'last' unless middle_crumb %>"><a href="<%=url_for({:controller => params[:object].pluralize})%>" rel="address:<%=url_for({:controller => params[:object].pluralize})%>"><%= params[:object].titleize %><span class="arrow"></span></a></li>
			<% if middle_crumb then %>
			<li class="last"><a href="<%=middle_crumb%>" rel="address:<%=middle_crumb%>"><%= (params[:id]) ? params[:id].titleize : "New" %><span class="arrow"></span></a></li>
			<% end %>
			<li><a class="last" href="#"><%= params[:attribute].titleize %></a></li>
		</ul>
   	  <% end %>
      <%= selector(@object,@attribute_relation, options) %>
   <% end %>
