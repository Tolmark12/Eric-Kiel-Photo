<% body_only ||= nil %>
<%= grid(@portfolio_items, :sortable => true, :filterable => true, :paginatable => true, :page => (params[:portfolio_item_page] || 1), :ajax => body_only) do |g| %>
  <% g.default_action Proc.new {|portfolio_item| %{ 	return ajaxClick('#{edit_bento_portfolio_item_path(portfolio_item)}'); } } %>
  
  <% g.add_column :name %>
  <% g.add_column :src %>
  <% g.add_column :low_res_src %>
  <% g.add_column :video_embed_code %>
  <% g.add_column :is_video_only %>
<% end %>