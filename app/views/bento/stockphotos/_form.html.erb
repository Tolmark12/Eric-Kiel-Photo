<%= seventy_thirty_container do |c| %>
  <%= c.left do %>  
    <%= bento_form([:bento, @stockphoto]) do |f| %>
      <% if @stockphoto.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@stockphoto.errors.count, "error") %> prohibited this stockphoto from being saved:</h2>
    
          <ul>
          <% @stockphoto.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.group :default, {} do |g|%> 
        <div class="left-container">
          <%= g.label :name %>
		</div>
          <%= g.text_field :name %><br />
        <div class="left-container">
          <%= g.label :image %>
		</div>
          <%= g.image_uploader :image, {:resize => {:mid => {:field => :mid_image, :height => 500},
											:small => {:field => :small_image, :height => 100}}} %><br />
        <div class="left-container">
          <%= g.label :tags %>
		</div>
          <%= g.selector :tags %><br />
      <% end %>
      <%= f.submit %>
    <% end %>
  <% end %>
  <%= c.right do %>
  <% end %>
<% end %>
