<% body_only ||= nil %>
<%= grid(@stockphotos, :sortable => true, :filterable => true, :paginatable => true, :ajax => body_only) do |g| %>
  <% g.default_action Proc.new {|stockphoto| %{ 	return ajaxClick('#{edit_bento_stockphoto_path(stockphoto)}'); } } %>
  <% g.add_column :name %>
  <% g.add_column :small_image %>
  <% g.add_column :mid_image %>
  <% g.add_column :image %>
<% end %>