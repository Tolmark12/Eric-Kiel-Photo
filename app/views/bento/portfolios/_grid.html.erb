<% body_only ||= nil %>
<%= grid(@portfolios, :sortable => true, :filterable => true, :paginatable => true, :page => (params[:portfolio_page] || 1), :ajax => body_only) do |g| %>
  <% g.default_action Proc.new {|portfolio| %{ 	return ajaxClick('#{edit_bento_portfolio_path(portfolio)}'); } } %>
  
  <% g.add_column :name %>
<% end %>