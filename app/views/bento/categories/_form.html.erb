<%= seventy_thirty_container do |c| %>
  <%= c.left do %>  
    <%= bento_form([:bento, @category]) do |f| %>
      <% if @category.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@category.errors.count, "error") %> prohibited this tag from being saved:</h2>
    
          <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.group :default, {} do |g|%> 
        <div class="left-container">
          <%= g.label :text_id %>
		    </div>
          <%= g.text_field :text_id %><br />
        <div class="left-container">
          <%= g.label :name %>
		    </div>
          <%= g.text_field :name %><br />
        <div class="left-container">
          <%= g.label :rank %>
		    </div>
          <%= g.text_field :rank %><br />
        <div class="left-container">
          <%= g.label :portfolio_items %>
        </div>
          <%= g.selector :portfolio_items, {:label => :low_res_src, :is_label_image => true, :tooltip => [:name,:item_type], :orderable => true} %><br />
      <% end %>
      <%= f.submit %>
    <% end %>
  <% end %>
  <%= c.right do %>
  <% end %>
<% end %>
