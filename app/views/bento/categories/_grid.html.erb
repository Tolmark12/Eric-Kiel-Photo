<% body_only ||= nil %>
<%= grid(@categories, :sortable => true, :filterable => true, :paginatable => true, :page => (params[:category_page] || 1), :ajax => body_only) do |g| %>
  <% g.default_action Proc.new {|category| %{ 	return ajaxClick('#{edit_bento_category_path(category)}'); } } %>
  
  <% g.add_column :text_id %>
  <% g.add_column :name %>
  <% g.add_column :rank %>
<% end %>