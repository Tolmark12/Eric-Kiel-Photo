<config>
    <modules>
        <Delorum_Stock>
            <version>0.1.0</version>
        </Delorum_Stock>
    </modules>
    <frontend>
        <routers>
            <stock>
                <use>standard</use>
                <args>
                    <module>Delorum_Stock</module>
                    <frontName>stock</frontName>
                </args>
            </stock>
        </routers>
        <layout>
            <updates>
                <stock>
                    <file>stock.xml</file>
                </stock>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<stock>
				<use>admin</use>
				<args>
					<module>Delorum_Stock</module>
					<frontName>stock</frontName>
				</args>
			</stock>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<stock module="stock">
				<title>Stock</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="stock">
						<title>Manage Photos</title>
						<sort_order>0</sort_order>
						<action>stock/adminhtml_photo</action>
					</items>
					<import module="stock">
						<title>Import Tags</title>
						<sort_order>1</sort_order>
						<action>stock/adminhtml_tag/import</action>
					</import>
				</children>
			</stock>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<stock>
							<title>Stock Module</title>
							<sort_order>10</sort_order>
							<children>
								<items>
									<title>Manage Photos</title>
									<sort_order>10</sort_order>
								</items>
								<import>
									<title>Import Tags</title>
									<sort>20</sort>
								</import>
							</children>
						</stock>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<stock>
					<file>stock.xml</file>
				</stock>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <stock>
                <class>Delorum_Stock_Model</class>
                <resourceModel>stock_mysql4</resourceModel>
            </stock>
            <stock_mysql4>
                <class>Delorum_Stock_Model_Mysql4</class>
                <entities>
                    <photo>
                        <table>stock_photo</table>
                    </photo>
                    <photo_tag>
                    	<table>stock_photo_tag</table>
                    </photo_tag>
                    <photo_tag_link>
                    	<table>stock_photo_tag_link</table>
                    </photo_tag_link>
                </entities>
            </stock_mysql4>
        </models>
        <resources>
            <stock_setup>
                <setup>
                    <module>Delorum_Stock</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </stock_setup>
            <stock_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </stock_write>
            <stock_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </stock_read>
        </resources>
        <blocks>
            <stock>
                <class>Delorum_Stock_Block</class>
            </stock>
        </blocks>
        <helpers>
            <stock>
                <class>Delorum_Stock_Helper</class>
            </stock>
        </helpers>
    </global>
</config>